{
  "variables": {
    "version": "0.1.0",
    "cm": "nocm",
    "cm_version": "",
    "cleanup_pause": "",
    "headless": "",
    "iso_url": "http://mirrors.dotsrc.org/oracle-linux/OL7/u0/x86_64/OracleLinux-R7-U0-Server-x86_64-dvd.iso",
    "iso_checksum": "74bcac408a164535ecd483503244e312a292bf84",
    "update": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  },
  "builders": [{
    "vm_name": "oracle70-desktop",
    "type": "vmware-iso",
    "guest_os_type": "oraclelinux-64",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "floppy_files": ["floppy/vmware9.compat_dcache.h.patch"],
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7-desktop.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 40960,
    "vmx_data": {
      "memsize": "1024",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "oracle70-desktop",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "guest_os_type": "Oracle_64",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7-desktop.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 40960,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "CM={{user `cm`}}",
      "CM_VERSION={{user `cm_version`}}",
      "CLEANUP_PAUSE={{user `cleanup_pause`}}",
      "UPDATE={{user `update`}}",
      "http_proxy={{user `http_proxy`}}",
      "https_proxy={{user `https_proxy`}}",
      "ftp_proxy={{user `ftp_proxy`}}",
      "rsync_proxy={{user `rsync_proxy`}}",
      "no_proxy={{user `no_proxy`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/kernel.sh",
      "script/fix-slow-dns.sh",
      "script/sshd.sh",
      "script/update.sh",
      "script/vagrant.sh",
      "script/desktop.sh",
      "script/vmtool.sh",
      "script/cmtool.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "vagrantfile_template": "tpl/vagrantfile-oracle70-desktop.tpl",
    "output": "box/{{.Provider}}/oracle70-desktop-{{user `cm`}}{{user `cm_version`}}-{{user `version`}}.box"
  }]
}
